{
  "name": "portfolio",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev -p 3000",
    "build": "run-s build:next",
    "build:next": "next build",
    "start": "next start",
    "lint": "run-p lint:*",
    "lint:next": "next lint --dir src --ignore-path .prettierignore --max-warnings 0",
    "lint:typecheck": "tsc --pretty --noEmit",
    "lint:stylelint": "stylelint --ignore-path .gitignore './src/**/*.css'",
    "lint:prettier": "prettier --check .",
    "format": "run-s format:*",
    "format:eslint": "pnpm lint:next --fix",
    "format:stylelint": "pnpm lint:stylelint --fix",
    "format:prettier": "pnpm lint:prettier --write",
    "test": "run-s test:*",
    "test:component": "vitest run",
    "test:e2e": "playwright test -c playwright.config.e2e.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.1.0",
    "@next/font": "13.4.4",
    "@react-spring/three": "^9.7.2",
    "@react-three/drei": "^9.71.0",
    "@react-three/fiber": "^8.13.0",
    "@sendgrid/mail": "^7.7.0",
    "@slack/web-api": "^6.8.1",
    "@t3-oss/env-nextjs": "^0.4.0",
    "next": "13.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.44.3",
    "three": "^0.153.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.34.3",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/strictest": "^2.0.1",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "@types/testing-library__jest-dom": "^5.14.6",
    "@types/three": "^0.152.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.1.3",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.4",
    "eslint-plugin-testing-library": "^5.11.0",
    "happy-dom": "^9.20.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard": "^33.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "5.1.3",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.4"
  },
  "volta": {
    "node": "18.12.1"
  }
}
